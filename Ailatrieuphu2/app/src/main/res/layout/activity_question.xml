<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity">

  <RelativeLayout
      android:layout_marginTop="20dp"
      android:id="@+id/relative"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ProgressBar
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@id/ivchucdanh"
          android:id="@+id/pbtimer"
          android:max="180"
          style="@style/Widget.AppCompat.ProgressBar.Horizontal"
          android:layout_marginLeft="30dp"
          android:layout_marginRight="30dp"
          android:layout_marginTop="5dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"/>

      <ImageView
          android:layout_alignParentLeft="true"
          android:id="@+id/ivchucdanh"
          android:src="@drawable/icontien"
          android:layout_width="60dp"
          android:layout_height="50dp"/>
  </RelativeLayout>

    <TextView
        android:text="10 Xu"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_below="@id/relative"
        android:id="@+id/tvdiemhientai"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_below="@id/relative"
        android:id="@+id/tvstt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Câu số: 1"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginTop="30dp"

   />

        <TextView
            android:layout_below="@id/tvstt"
            android:id="@+id/tvcauhoi"
            android:text="Nam tên là gì?"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <Button
            android:id="@+id/btnA"
            android:layout_below="@id/ivstoptime"
            android:text="A.Con gà"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_dapan"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:layout_height="60dp"/>

        <Button
            android:id="@+id/btnB"
            android:layout_below="@id/btnA"
            android:text="B.Con chó"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_dapan"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>


        <Button
            android:id="@+id/btnC"
            android:layout_below="@id/btnB"
            android:text="C.Nam"
            android:background="@drawable/btn_dapan"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

    <Button
        android:id="@+id/btnD"
        android:layout_below="@id/btnC"
        android:text="D.Con Khỉ"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_dapan"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>


    <ImageView
        android:id="@+id/ivdoicauhoi"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/tvcauhoi"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundquyen"
        android:src="@drawable/doicauhoi" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tvcauhoi"
            android:id="@+id/ivdapan"
            android:layout_marginRight="40dp"
            android:background="@drawable/backgroundquyen"
            android:src="@drawable/dapan"
            android:layout_height="40dp"
            android:layout_width="40dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/ivstoptime"
            android:layout_below="@id/tvcauhoi"
            android:id="@+id/ivcohoi"
            android:background="@drawable/backgroundquyen"
            android:src="@drawable/cohoi"
            android:layout_marginLeft="55dp"
            android:layout_height="40dp"
            android:layout_width="40dp" />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvcauhoi"
            android:layout_toRightOf="@id/ivdoicauhoi"
            android:id="@+id/ivstoptime"
            android:layout_marginLeft="55dp"
            android:src="@drawable/dungtime"
            android:background="@drawable/backgroundquyen"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tvid"
        android:text="Nhìn ID"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>